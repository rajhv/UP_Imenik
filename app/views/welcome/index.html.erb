<h1>Telefonski imenik Univerze na primorskem</h1>


<%= link_to 'Članice', members_path %> |
<%= link_to 'Oddelki', departments_path %> |

<%= link_to 'Nov zaposlen', new_employee_path %>

<br>
<br>


<%= form_tag(search_path, method: :get, remote: true) do %>
  <%= select_tag(:mem, options_from_collection_for_select(Member.all,  :id, :name, :selected => params[:mem]), prompt: "Vse članice") %>
  <%= select_tag(:dep, options_from_collection_for_select([],  :id, :name, :selected => params[:dep]), prompt: "Vsi oddelki", disabled: true) %>
  <%= text_field_tag :query, '', autofocus: true%>
  <%= submit_tag "Išči", name: nil%>
<% end %>

<br>
<br>
<div id="employee-table-container">
  <%= render "employees/table", locals: { employees: @employees } %>
</div>
