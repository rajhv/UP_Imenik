<h1>Interni telefonski imenik Univerze na primorskem</h1>


<%= link_to 'Članice', members_path %> |
<%= link_to 'Oddelki', departments_path %> |

<%= link_to 'Nov zaposlen', new_employee_path %>

<br>
<br>

<nav class="navbar navbar-default">
    <%= form_tag(search_path, method: :get, remote: true, :class => "navbar-form navbar-left") do %>
      <div class="form-group">
        <%= select_tag(:mem, options_from_collection_for_select(Member.all,  :id, :name, :selected => params[:mem]), prompt: "Vse članice", :class => "form-control") %>
        <%= select_tag(:dep, options_from_collection_for_select([],  :id, :name, :selected => params[:dep]), prompt: "Vsi oddelki", disabled: true, :class => "form-control") %>
        <%= text_field_tag :query, '', placeholder: "ime, telefon, e-mail,...", autofocus: true, :class => "form-control"%>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            <span class="glyphicon glyphicon-search"> Išči</span>
        <% end %>
      </div>
    <% end %>
</nav>


<div id="employee-table-container">
  <%= render "employees/table", locals: { employees: @employees } %>
</div>
