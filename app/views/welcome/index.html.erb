      <ul class="nav navbar-nav navbar-left" id="menu">
        <li>
          <%= form_tag(search_path, method: :get, remote: true, :class => "navbar-form navbar-left") do %>
            <%= select_tag(:mem, options_from_collection_for_select(Member.all,  :id, :name, :selected => params[:mem]), prompt: "Vse članice", :class => "form-control") %>
