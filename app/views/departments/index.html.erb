<h1>Oddelek</h1>

<style>
table, th, td {
    border: 1px solid grey;
}

</style>
<table id="m" style="width:50%">
  <% @departments.each do |d| %>
    <tr>
      <td><h3><%= d.name %></h3></td>
      <td><%= link_to 'Briši', department_path(d),
              method: :delete,
              data: { confirm: 'Si prepričan?' } %></td>
    </td>
    </tr>
  <% end %>
</table>
