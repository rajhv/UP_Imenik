<h1>Zaposleni</h1>

<style>
table, th, td {
    border: 1px solid grey;
}

</style>
<table id="table_employees" style="width:2%">
  <% @employees.each do |e| %>
    <tr>
      <td><h3><%= e.name %></h3></td>
      <td><h3><%= e.number %></h3></td>
      <td><%= link_to 'Briši', employee_path(e),
              method: :delete,
              data: { confirm: 'Si prepričan?' } %></td>
    </td>
    </tr>
  <% end %>
</table>

